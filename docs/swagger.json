      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get all contacts",
        "operationId": "getContacts",
        "description": "Get all contacts",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "sortBy",
            "in": "query",
            "description": "Field to sort by (e.g., name, email, createdAt)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "name",
                "email",
                "createdAt"
              ],
              "example": "name"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "description": "Sort order (asc or desc)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "example": "asc"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Current page",
            "required": false,
            "schema": {
              "type": "number",
              "example": 4
            }
          },
          {
            "name": "perPage",
            "in": "query",
            "description": "Contacts per page",
            "required": false,
            "schema": {
              "type": "number",
              "example": 4
            }
          }
        ],
